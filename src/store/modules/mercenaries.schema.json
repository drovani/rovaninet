{
    "$id": "https://raw.githubusercontent.com/drovani/rovaninet/main/src/store/modules/mercenaries.schema.json",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "Hearthstone Mercenaries Mercenaries",
    "description": "The schema for a complete collection of Mercenaries from the Hearthstone Mercenaries game",
    "type": "object",
    "properties": {
        "mercenaries": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "role": {
                        "enum": [
                            "Protector",
                            "Fighter",
                            "Caster"
                        ]
                    },
                    "rarity": {
                        "enum": [
                            "Rare",
                            "Epic",
                            "Legendary"
                        ]
                    },
                    "race": {
                        "type": "string"
                    },
                    "attack": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "health": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "abilities": {
                        "type": "object",
                        "minProperties": 3,
                        "maxProperties": 3,
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "unlock": {
                                    "type": "integer"
                                },
                                "spell_school": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "speed": {
                                    "type": "integer"
                                },
                                "cooldown": {
                                    "type": "integer"
                                },
                                "summon": {
                                    "type": "object"
                                },
                                "tiers": {
                                    "type": "array"
                                }
                            },
                            "required": [
                                "unlock",
                                "tiers"
                            ]
                        }
                    },
                    "equipment": {
                        "type": "object",
                        "minProperties": 3,
                        "maxProperties": 3,
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "unlock": {
                                    "enum": [
                                        "Level 30",
                                        "Task 2",
                                        "Task 7"
                                    ]
                                },
                                "position": {
                                    "enum": [
                                        "left",
                                        "middle",
                                        "right"
                                    ]
                                },
                                "affects": {
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    ]
                                },
                                "description": {
                                    "oneOf": [
                                        {
                                            "type": "integer"
                                        },
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "array"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "type": {
                                                    "enum": [
                                                        "append",
                                                        "prepend",
                                                        "replace"
                                                    ]
                                                },
                                                "text": {
                                                    "type": "string"
                                                },
                                                "value": {
                                                    "oneOf": [
                                                        {
                                                            "type": "integer"
                                                        },
                                                        {
                                                            "type": "string"
                                                        },
                                                        {
                                                            "type": "array"
                                                        }
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },
                                "modifier": {
                                    "type": "object"
                                },
                                "tiers": {
                                    "type": "array"
                                }
                            },
                            "required": [
                                "unlock",
                                "position"
                            ]
                        }
                    },
                    "tasks": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "ability": {
                                    "type": "string"
                                },
                                "rewards": {
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "array",
                                            "items": {
                                                "type": "integer"
                                            }
                                        }
                                    ]
                                },
                                "quote": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "required": [
                    "role",
                    "rarity",
                    "attack",
                    "health",
                    "abilities",
                    "equipment",
                    "tasks"
                ]
            }
        }
    }
}